{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "ES2022"],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "target": "ES2022",
      "module": "ES2022",
      "outDir": "webRoot/lib",
      "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}